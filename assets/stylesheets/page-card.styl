.page-card
	&--aside
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		strong
			font-size 4rem
			font-weight normal
			font-family Regular, Arial, sans-serif
		p
			font-size 2rem
			padding-bottom 24px

	iframe
		opacity 0
		transition opacity 1s ease
		z-index 10
		position fixed
		width calc(100% - 48px)
		@media (min-width 768px)
			width calc(100% - 96px)
		height calc(100% + 62px)
		top -62px
		@media (min-width 449px)
			height calc(100% + 70px)
			top -70px
		left 48px
		&.is-loaded
			opacity 1

	&--article
		position absolute
		top -7777px

	&--next
		display none
		position absolute
		top 0
		right 0
		width 49px
		height 100%
		border-left 1px solid $borderColor
		background-color $backgroundColor
		flex-direction column
		flex-wrap wrap
		justify-content space-between
		overflow hidden
		cursor pointer

		display none
		@media (min-width 768px)
			display flex

		&--title
			padding 24px 0
			font-size 1.2rem
			color $linkColor
			overflow hidden
			display flex
			flex-direction column
			flex 0 1 200px

			&--rotate
				color $highlightLinkColor
				display inline-block
				overflow hidden
				text-align right
				width 400px
				line-height 1
				margin-left 30px
				transform rotate(-90deg) translateX(calc(-100% + 10px))
				transform-origin: bottom left;

		&--menu
			padding 24px 0
			text-align center
			width 100%

			&--rotate img
				transform rotate(-90deg)
				transform-origin center center

		&--location
			padding 24px 0
			font-size 1.2rem
			color $linkColor
			overflow hidden
			display flex
			flex-direction column-reverse
			flex 0 1 200px

			&--rotate
				color $highlightLinkColor
				display inline-block
				overflow hidden
				width 150px
				line-height 1
				margin-left 30px
				transform rotate(-90deg)
				transform-origin: bottom left
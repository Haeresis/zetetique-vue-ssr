.page-news
	position absolute
	top 0
	left 0
	width 100%
	height 100%

	&--breadcrumb
		display none
		@media (min-width 768px)
			display block
		position absolute
		padding 24px 16px
		font-size 1.2rem
		top 0
		right 20px
		z-index 3

	h1
		color $highlightTextColor
		font-size 4rem

	hr
		background-color $highlightTextColor
		height 1px
		border 0
		margin 24px auto 24px 0
		width 24px

	&--content
		overflow-y auto
		overflow-x hidden
		height 100%

		&--outer
			margin 0
			padding 0
			list-style-type none

			&:after
				display block
				content " "
				flex(999 999 auto)

		&--header
			padding 24px 24px 0
			background-color #fff
			width calc(100% - 17px)
			top 0
			left 0
			@media (min-width 768px)
				position absolute
				z-index 2

		&--inner
			@media (min-width 768px)
				margin-top 140px
			padding 0 0 0 24px
			display flex
			background-size cover
			background-image url('../media/images/team.jpg')

		&--board
			flex-basis calc(100% - 380px)
			padding-top 24px

		&--nav
			flex-basis 380px
			padding 0 24px

			background-color #fff

			@media (max-width 767px)
				display none

			h2
				font-size 2.4rem

		&--news
			&--item
				width 25rem
				margin 0 2rem 2rem 0
				background-color #fff
				float left

				img
					width 100%
					height auto

				h2
					padding 0 1.5rem
					color #000
					font-size 2rem
					cursor pointer

				h3
					padding 1rem 1.5rem
					cursor pointer

				&--detail
					cursor pointer
					overflow hidden
					padding 0 1.5rem 0
					margin 1rem 0 0
					height 150px
					position relative

					img
						position absolute
						top 50%
						left 50%
						transform translate(-50%, -50%)
						height 100%
						width auto

				&--inner
					padding 1.5rem 1.5rem 0

			&--tag
				font-size 1.2rem
				font-style italic
				padding 1rem 1.5rem
				cursor pointer

			&--description
				cursor pointer

				p
					overflow-x hidden
					text-overflow ellipsis

			&--go-to
				padding-top 1.5rem
				padding-bottom 1.5rem

				.button
					display inline-block
					width 100%
					text-align center
					font-size 2rem
					letter-spacing 0.04rem

			&--comment
				text-align center
				margin-bottom 1.5rem
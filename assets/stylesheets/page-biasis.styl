.page-biasis
	position absolute
	top 0
	left 0
	width 100%
	height 100%

	&--breadcrumb
		display none
		@media (min-width 768px)
			display block
		position absolute
		padding 24px 16px
		font-size 1.2rem
		top 0
		right 20px
		z-index 3

	h1
		color $highlightTextColor
		font-size 4rem

	hr
		background-color $highlightTextColor
		height 1px
		border 0
		margin 24px auto 24px 0
		width 24px

	&--content
		overflow-y auto
		overflow-x hidden
		height 100%

		&--header
			padding 24px 24px 0
			background-color #fff
			width calc(100% - 17px)
			top 0
			left 0
			z-index 3
			@media (min-width 768px)
				position absolute
				z-index 2

		&--inner
			@media (min-width 768px)
				margin-top 140px

			display flex
			position absolute
			width 100%
			height calc(100% - 140px)

		&--nav
			position absolute
			left calc(100% - 380px)
			width 380px
			padding 0 24px
			height 100%
			z-index 3

			background-color #fff

			h2
				font-size 2.4rem

		&--codex
			position absolute
			width calc(100% - 380px)
			height 100%
			overflow hidden

			&--level
				position absolute
				left 50%
				top 50%
				transform translate(-50%, -50%)
				border-radius 50%

				&.animate-enter.animate-enter
				&.animate-leave-to.animate-leave-to
					& > ^[0..3]--content
						width 32px
						height 32px
						background-color rgba(255, 0, 0, 1)

					& > ^[0..3]--background
						background-color rgba(255, 255, 255, 0)

				&.animate-enter-active.animate-enter-active
				&.animate-leave-active.animate-leave-active
					& > ^[0..3]--content
						transition width .5s ease, height .5s ease, background-color .5s ease

					& > ^[0..3]--background
						transition background-color .5s ease

				&.animate-leave.animate-leave
				&.animate-enter-to.animate-enter-to
					& > ^[0..3]--content
						width 200px
						height 200px
						background-color rgba(255, 0, 0, .1)

					& > ^[0..3]--background
						background-color rgba(255, 0, 0, .1)

				& > ^[0..3]--content > ^[0..3]
					display none

				&.is-top
					& > ^[0..3]--content
						& > ^[5..5]--title
							top auto
							bottom calc(100% + 8px)
							transform translate(-50%, 0)
							text-align center
							left 50%

				&.is-bottom
					& > ^[0..3]--content
						& > ^[5..5]--title
							bottom auto
							top calc(100% + 8px)
							transform translate(-50%, 0)
							text-align center
							left 50%

				&.is-left
					& > ^[0..3]--content
						& > ^[5..5]--title
							left auto
							right calc(100% + 8px)
							transform translate(0, -50%)
							text-align right

				&[class*="data-overflow"]
					& > ^[0..3]--content
						background-color rgba(126, 178, 189, 1)

					& > ^[0..3]--background
						background-color rgba(216, 232, 235 .8)

				&[class*="not-enough-meaning"]
					& > ^[0..3]--content
						background-color rgba(147, 181, 220, 1)

					& > ^[0..3]--background
						background-color rgba(222, 233, 244, .8)

				&[class*="hurry-need"]
					& > ^[0..3]--content
						background-color rgba(164, 170, 102, 1)

					& > ^[0..3]--background
						background-color rgba(228, 229, 209, .8)

				&[class*="remember-us"]
					& > ^[0..3]--content
						background-color rgba(193, 202, 201, 1)

					& > ^[0..3]--background
						background-color rgba(236, 239, 239, .8)

				&.is-opened
					z-index 3

					&[class*="data-overflow"]
						& > ^[0..3]--content
							background-color rgba(189, 216, 221 .8)

					&[class*="not-enough-meaning"]
						& > ^[0..3]--content
							background-color rgba(199, 218, 236, .8)

					&[class*="hurry-need"]
						& > ^[0..3]--content
							background-color rgba(209, 211, 177, .8)

					&[class*="remember-us"]
						& > ^[0..3]--content
							background-color rgba(223, 228, 228, .8)

					& > ^[0..3]--content > ^[0..3]
						display block

					& > ^[0..3]--content
						width 200px
						height 200px
						cursor default
						background-color rgba(255, 206, 206, 0.9)

						& > ^[5..5]--title
							left 50%
							top 50%
							bottom auto
							right auto
							transform translate(-50%, -50%)
							text-align center

					& > ^[0..3]--background
						width 10000px
						height 10000px

				&.is-circular-4

					&:nth-child(2)
						transform translate(-50%, -50%) rotate(0) translate(100px) rotate(-0)
					&:nth-child(3)
						transform translate(-50%, -50%) rotate(90deg) translate(100px) rotate(-90deg)
					&:nth-child(4)
						transform translate(-50%, -50%) rotate(180deg) translate(100px) rotate(-180deg)
					&:nth-child(5)
						transform translate(-50%, -50%) rotate(270deg) translate(100px) rotate(-270deg)

				&.is-circular-5

					&:nth-child(2)
						transform translate(-50%, -50%) rotate(0) translate(100px) rotate(-0)
					&:nth-child(3)
						transform translate(-50%, -50%) rotate(72deg) translate(100px) rotate(-72deg)
					&:nth-child(4)
						transform translate(-50%, -50%) rotate(144deg) translate(100px) rotate(-144deg)
					&:nth-child(5)
						transform translate(-50%, -50%) rotate(216deg) translate(100px) rotate(-216deg)
					&:nth-child(6)
						transform translate(-50%, -50%) rotate(288deg) translate(100px) rotate(-288deg)

				&.is-circular-6

					&:nth-child(2)
						transform translate(-50%, -50%) rotate(0) translate(100px) rotate(-0)
					&:nth-child(3)
						transform translate(-50%, -50%) rotate(60deg) translate(100px) rotate(-60deg)
					&:nth-child(4)
						transform translate(-50%, -50%) rotate(120deg) translate(100px) rotate(-120deg)
					&:nth-child(5)
						transform translate(-50%, -50%) rotate(180deg) translate(100px) rotate(-180deg)
					&:nth-child(6)
						transform translate(-50%, -50%) rotate(240deg) translate(100px) rotate(-240deg)
					&:nth-child(7)
						transform translate(-50%, -50%) rotate(300deg) translate(100px) rotate(-300deg)

				&--background
					position absolute
					transform translate(-50%, -50%)
					background-color rgba(255, 229, 229, 1)
					z-index 1

				&--content
					position absolute
					transform translate(-50%, -50%)
					border-radius 50%
					background-color rgba(255, 0, 0, 1)
					width 32px
					height 32px
					cursor pointer
					z-index 2

					&--title
						position absolute
						width 240px
						cursor pointer

						top 50%
						left calc(100% + 8px)
						transform translate(0, -50%)